<header class="site-header">
    <div class="header-container">
        <div class="logo">
            <a href="{{@site.url}}">{{@site.title}}</a>
        </div>
        <nav class="site-nav">
            {{#if @site.navigation}}
                <ul>
                    {{#foreach @site.navigation}}
                        <li><a href="{{url}}">{{label}}</a></li>
                    {{/foreach}}
                </ul>
            {{/if}}
        </nav>
        <div class="header-actions">
            {{#if @site.members_enabled}}
                {{#if @member}}
                    <a href="{{@site.url}}/account" class="btn-account">Account</a>
                {{else}}
                    <a href="{{@site.url}}/signin" class="btn-signin">Sign In</a>
                    <a href="{{@site.url}}/signup" class="btn-signup">Subscribe</a>
                {{/if}}
            {{/if}}
        </div>
    </div>
</header>
