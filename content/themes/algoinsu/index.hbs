{{!< default}}

<main class="main">
    <div class="container">
        <header class="page-header">
            <h1 class="page-title">{{@site.title}}</h1>
            <p class="page-description">{{@site.description}}</p>
        </header>

        <div class="post-feed">
            {{#foreach posts}}
                <article class="post-card">
                    <a href="{{url}}" class="post-card-link">
                        <h2 class="post-card-title">{{title}}</h2>
                        <div class="post-card-meta">
                            <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time>
                            {{#primary_tag}}<span class="tag">{{name}}</span>{{/primary_tag}}
                        </div>
                        <p class="post-card-excerpt">{{excerpt}}</p>
                    </a>
                </article>
            {{/foreach}}
        </div>

        {{pagination}}
    </div>
</main>
